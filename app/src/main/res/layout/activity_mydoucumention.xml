<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".doucumentionActivity"
        android:orientation="vertical"
        android:background="#9FC2B6F0"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/documention_text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/documention_text_1"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/documention_pic_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/choose_pic"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/documention_text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/documention_text_2"
            android:textSize="19sp"
            />
    </LinearLayout>
</ScrollView >