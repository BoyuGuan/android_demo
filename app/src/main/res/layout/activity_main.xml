<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#9FC2B6F0">
    1
    <TextView
        android:id="@+id/APP_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="模型压缩在边际设备的应用"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_margin="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="信计1801管博宇 20182526"
        android:textSize="27sp"
        android:layout_marginLeft="15dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/main_doucumention_btn"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="#00FFFFFF"
            android:drawableTop="@drawable/main_documention_selector"
            android:gravity="center"/>
        <TextView
            android:id="@+id/main_doucumention_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_doucumention_btn"
            android:text="使用说明"
            android:layout_centerHorizontal="true"
            android:textColor="#FF654428"
            android:textSize="20sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/main_classification_btn"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="#00FFFFFF"
            android:layout_below="@+id/main_doucumention_text"
            android:drawableTop="@drawable/main_classification"
            android:gravity="center" />
        <TextView
            android:id="@+id/my_doucumention_textBelow"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_classification_btn"
            android:text="开始使用"
            android:layout_centerHorizontal="true"
            android:textColor="#FF654428"
            android:textSize="20sp"
            android:gravity="center"/>

    </RelativeLayout>





</LinearLayout>